<h1 id="titleName">It's Burger Time!</h1>

<img src="assets/images/favicon.jpg">

<h2>Chow Down on Some Juicy, Beefy Goodness!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}
    <button class="eatBurger" data-id="{{this.id}}" eatenValue="0">EAT THE BURGER!
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Ready For Another Round?</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}
    <button class="reorderBurger" data-id="{{this.id}}">REORDER!</button>
    <button class="deleteBurger" data-id="{{this.id}}">DELETE</button>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger!</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>

</form>